{
  "name": "streamr-test-utils",
  "version": "2.0.0",
  "description": "a collection of Node.js utilities for dealing with asynchronous behavior in jest/mocha tests",
  "main": "./dist/src/utils.js",
  "types": "./dist/src/utils.d.ts",
  "scripts": {
    "check": "tsc -p ./tsconfig.jest.json --noEmit",
    "clean": "jest --clearCache || true; rm -rf dist *.tsbuildinfo node_modules/.cache || true",
    "test": "jest",
    "test-unit": "npm run test",
    "eslint": "eslint --cache --cache-location=node_modules/.cache/.eslintcache/ '*/**/*.{js,ts}'",
    "build": "tsc --build tsconfig.node.json"
  },
  "keywords": [
    "testing",
    "streamr",
    "asynchronous"
  ],
  "homepage": "https://github.com/streamr-dev/streamr-test-utils",
  "bugs": {
    "url": "https://github.com/streamr-dev/streamr-test-utils/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/streamr-dev/network-monorepo.git",
    "directory": "packages/test-utils"
  },
  "author": "Streamr <contact@streamr.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "@ethersproject/wallet": "^5.5.0",
    "cors": "^2.8.5",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "jest": "^27.2.5",
    "ts-jest": "^27.0.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.5.2"
  }
}
