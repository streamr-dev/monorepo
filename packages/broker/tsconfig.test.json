{
    "extends": "@streamr/dev-config/ts/tsconfig.jest.json",
    "compilerOptions": {
        "lib": [
            "ES5",
            "ES2015",
            "ES2016",
            "ES2017",
            "ES2018",
            "ES2019",
            "ES2020",
            "ESNext",
            "DOM"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictBindCallApply": true
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ],
    "exclude": ["node_modules", "dist", "test/legacy/*", "test/memory/*"]
}
