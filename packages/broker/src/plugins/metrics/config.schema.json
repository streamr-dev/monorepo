{
  "$id": "config.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Metrics plugin configuration",
  "required": [
    "consoleAndPM2IntervalInSeconds",
    "nodeMetrics",
    "firehoseStreamIdHead"
  ],
  "additionalProperties": false,
  "properties": {
    "consoleAndPM2IntervalInSeconds": {
      "type": "integer",
      "description": "Interval (in seconds) in which to collect and report metrics (0 = disable)",
      "minimum": 0
    },
    "firehoseStreamIdHead": {
      "type": "string",
      "description": "Base streamId before granularities (sec, min, hour) for the firehose metrics stream",
      "default": "streamr.eth/metrics/nodes/firehose/"
    },
    "nodeMetrics" : {
      "type": [
        "object",
        "null"
      ],
      "required": [
        "client",
        "storageNode"
      ],
      "additionalProperties": false,
      "properties": {
        "client": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "wsUrl",
            "httpUrl"
          ],
          "properties": {
            "wsUrl": {
              "type": "string",
              "description": "WebSocket URL to configure metrics reporting StreamrClient with"
            },
            "httpUrl": {
              "type": "string",
              "description": "Core API URL to configure metrics reporting StreamrClient with"
            }
          }
        },
        "storageNode":{
          "type": "string"
        }
      }
    }
  }
}
