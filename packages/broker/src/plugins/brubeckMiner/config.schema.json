{
    "$id": "config.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "description": "Brubeck miner plugin configuration",
    "additionalProperties": false,
    "properties": {
        "rewardStreamIds": {
            "type": "array",
            "items": { "type": "string" },
            "uniqueItems": true,
            "default": ["streamr.eth/brubeck/brubeck-rewards"]
        },
        "claimServerUrl": {
            "type": "string",
            "default": "https://brubeck-rewards.streamr.network"
        },
        "maxClaimDelay": {
            "type": "number",
            "description": "Maximum time for delaying the claim in milliseconds",
            "default": 120000
        },
        "stunServerHost": {
            "type": [
                "string",
                "null"
            ],
            "default": "stun.streamr.network:5349"
        }
    }
}
