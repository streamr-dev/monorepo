{
    "$id": "config.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "description": "Info plugin configuration",
    "additionalProperties": false,
    "properties": {
        "apiAuthentication": {
            "anyOf": [{
                "type": "object",
                "description": "Override Broker's API authentication keys",
                "required": [
                    "keys"
                ],
                "additionalProperties": false,
                "properties": {
                    "keys": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }, {
                "type": "null"
            }]
        }
    }
}
