{
  "$id": "config.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Brubeck miner plugin configuration",
  "additionalProperties": false,
  "properties": {
    "streams": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "streamId": {
            "type": "string"
          },
          "streamPartition": {
            "type": "number"
          },
          "additionalProperties": false
        }
      },
      "uniqueItems": true,
      "default": []
    },
    "subscriptionRetryInterval": {
      "type": "number",
      "default": 30000
    }
  }
}
