{
  "name": "@streamr/utils",
  "version": "102.0.0-beta.0",
  "description": "A collection of shared common utilities",
  "type": "module",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/streamr-dev/network.git",
    "directory": "packages/utils"
  },
  "module": "./src/exports.ts",
  "types": "./build/src/exports.d.ts",
  "scripts": {
    "build": "tsc -b",
    "zero": "rm -rf build dist",
    "postbuild": "rollup -c && dts-bundle-generator --no-banner -o dist/bundle.d.ts --project=tsconfig.dist.json src/exports.ts && tsx scripts/rewrite-package.ts",
    "clean": "jest --clearCache || true; rm -rf dist build vendor *.tsbuildinfo node_modules/.cache || true",
    "eslint": "eslint --cache --cache-location=node_modules/.cache/.eslintcache/ '*/**/*.{js,ts}'",
    "test": "jest",
    "test-browser": "karma start karma.config.js"
  },
  "author": "Streamr Network AG <contact@streamr.network>",
  "license": "Apache-2.0",
  "dependencies": {
    "eventemitter3": "^5.0.0",
    "lodash": "^4.17.21",
    "pino": "^9.5.0",
    "pino-pretty": "^11.3.0",
    "secp256k1": "^5.0.1",
    "sha3": "^2.1.4"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@streamr/browser-test-runner": "^0.0.1",
    "@types/lodash": "^4.17.12",
    "@types/node-fetch": "^2.6.4",
    "@types/secp256k1": "^4.0.6",
    "dts-bundle-generator": "^9.5.1",
    "node-fetch": "^2.7.0",
    "prettier": "^3.3.3",
    "rollup": "^4.24.4",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "rollup-plugin-terser": "^7.0.2",
    "tsx": "^4.19.2"
  }
}
