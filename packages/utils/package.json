    "pino": "^6.11.3",
    "pino-pretty": "^5.0.2"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/pino": "^6.3.8",
    "@types/pino-pretty": "^4.7.0",
