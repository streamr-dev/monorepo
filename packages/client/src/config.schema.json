{
    "$id": "config.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Broker configuration format",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "id": {
            "type": "string"
        },
        "auth": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "privateKey": {
                    "type": "string",
                    "format": "ethereum-private-key"
                },
                "address": {
                    "type": "string",
                    "format": "ethereum-address"
                },
                "ethereum": {
                    "type": "object"
                },
                "sessionToken": {
                    "type": "string"
                },
                "unauthenticated": {
                    "type": "boolean"
                }
            }
        },
        "streamrNodeAddress": {
            "type": "string",
            "format": "ethereum-address"
        },
        "dataUnion": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "minimumWithdrawTokenWei": {
                    "anyOf": [{
                        "type": "number"
                    }, {
                        "type": "string"
                    }, {
                        "type": "object"
                    }]
                },
                "payForTransport": {
                    "type": "boolean"
                },
                "factoryMainnetAddress": {
                    "type": "string",
                    "format": "ethereum-address"
                },
                "factorySidechainAddress": {
                    "type": "string",
                    "format": "ethereum-address"
                },
                "templateMainnetAddress": {
                    "type": "string",
                    "format": "ethereum-address"
                },
                "templateSidechainAddress": {
                    "type": "string",
                    "format": "ethereum-address"
                }
            }
        },
        "cache": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "maxSize": {
                    "type": "number"
                },
                "maxAge": {
                    "type": "number"
                }
            }
        },
        "binanceAdapterAddress": {
            "type": "string",
            "format": "ethereum-address"
        },
        "binanceSmartChainAMBAddress": {
            "type": "string",
            "format": "ethereum-address"
        },
        "withdrawServerUrl": {
            "type": "string",
            "format": "uri"
        },
        "mainChainRPC": {
            "anyOf": [{
                "$ref": "#/definitions/chainConnectionInfo"
            }, {
                "type": "string",
                "format": "uri"
            }]
        },
        "streamRegistryChainRPC": {
            "$ref": "#/definitions/chainConnectionInfo"
        },
        "dataUnionBinanceWithdrawalChainRPC": {
            "$ref": "#/definitions/chainConnectionInfo"
        },
        "dataUnionChainRPC": {
            "$ref": "#/definitions/chainConnectionInfo"
        },
        "tokenAddress": {
            "type": "string",
            "format": "ethereum-address"
        },
        "tokenSidechainAddress": {
            "type": "string",
            "format": "ethereum-address"
        },
        "ethereumNetworks": {
            "type": "object"
        },
        "restUrl": {
            "type": "string",
            "format": "uri"
        },
        "autoConnect": {
            "type": "boolean"
        },
        "autoDisconnect": {
            "type": "boolean"
        },
        "orderMessages": {
            "type": "boolean"
        },
        "gapFill": {
            "type": "boolean"
        },
        "maxGapRequests": {
            "type": "number"
        },
        "maxRetries": {
            "type": "number"
        },
        "verifySignatures": {
            "type": "string",
            "enum": ["auto", "always", "never"]
        },
        "retryResendAfter": {
            "type": "number"
        },
        "gapFillTimeout": {
            "type": "number"
        },
        "groupKeys": {
            "type": "object"
        },
        "network": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "location": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "latitude": {
                            "type": "number"
                        },
                        "longitude": {
                            "type": "number"
                        },
                        "country": {
                            "type": "string"
                        },
                        "city": {
                            "type": "string"
                        }
                    }
                },
                "trackerPingInterval": {
                    "type": "number"
                },
                "trackers": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "required": [
                            "id",
                            "http",
                            "ws"
                        ],
                        "properties": {
                            "id": {
                                "type": "string",
                                "format": "ethereum-address"
                            },
                            "http": {
                                "type": "string",
                                "format": "uri"
                            },
                            "ws": {
                                "type": "string",
                                "format": "uri"
                            }
                        }
                    }
                },
                "disconnectionWaitTime": {
                    "type": "number"
                },
                "peerPingInterval": {
                    "type": "number"
                },
                "newWebrtcConnectionTimeout": {
                    "type": "number"
                },
                "webrtcDatachannelBufferThresholdLow": {
                    "type": "number"
                },
                "webrtcDatachannelBufferThresholdHigh": {
                    "type": "number"
                },
                "stunUrls": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "rttUpdateTimeout": {
                    "type": "number"
                },
                "trackerConnectionMaintenanceInterval": {
                    "type": "number"
                },
                "webrtcDisallowPrivateAddresses": {
                    "type": "boolean"
                },
                "acceptProxyConnections": {
                    "type": "boolean"
                }
            }
        },
        "storageNodeRegistry": {
            "oneOf": [{
                "type": "array",
                "items": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": [
                        "address",
                        "url"
                    ],
                    "properties": {
                        "address": {
                            "type": "string",
                            "format": "ethereum-address"
                        },
                        "url": {
                            "type": "string",
                            "format": "uri"
                        }
                    }
                }
            }, {
                "type": "object",
                "additionalProperties": false,
                "required": [
                    "contractAddress",
                    "jsonRpcProvider"
                ],
                "properties": {
                    "contractAddress": {
                        "type": "string",
                        "format": "ethereum-address"
                    },
                    "jsonRpcProvider": {
                        "type": "string",
                        "format": "uri"
                    }
                }
            }]
        },
        "debug": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "inspectOpts": {
                    "type": "object"
                }
            }
        },
        "theGraphUrl" : {
            "type" : "string",
            "format": "uri"
        },
        "streamRegistryChainAddress" : {
            "type" : "string"
        },
        "storageNodeRegistryChainAddress" : {
            "type" : "string"
        },
        "streamStorageRegistryChainAddress" : {
            "type" : "string"
        }
    },
    "definitions": {
        "chainConnectionInfo": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "url"
            ],
            "properties": {
                "chainId": {
                    "type": "number"
                },
                "name": {
                    "type": "string"
                },
                "url": {
                    "type": "string",
                    "format": "uri"
                },
                "user": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                },
                "allowInsecureAuthentication": {
                    "type": "boolean"
                },
                "timeout": {
                    "type": "number"
                },
                "headers": {
                    "type": "object"
                }
            }
        }

    }
}
