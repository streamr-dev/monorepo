    "@streamr/utils": "^1.0.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@streamr/dev-config": "^1.0.0",
    "@types/lodash": "^4.14.175",
    "@types/node": "^16.10.6",
    "commander": "^8.3.0",
    "expect": "^28.1.3",
    "jest": "^28.1.2",
    "jest-circus": "^28.0.5",
    "jest-extended": "^0.11.5",
    "jest-mock": "^28.1.3",
    "streamr-test-utils": "^2.0.0",
